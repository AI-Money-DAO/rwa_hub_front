# App Configuration
NEXT_PUBLIC_APP_NAME=RWA Hub
NEXT_PUBLIC_API_BASE_URL=http://127.0.0.1

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=86400000
JWT_REFRESH_EXPIRY=604800000

# API Configuration
API_TIMEOUT=10000
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=1000

# Pagination Configuration
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=/uploads

# Chat Configuration
MAX_MESSAGE_LENGTH=1000
MAX_SESSION_HISTORY=100
TYPING_INDICATOR_DELAY=1000
AUTO_SAVE_INTERVAL=30000

# Task Configuration
MAX_TASKS_PER_USER=10
TASK_SUBMISSION_TIMEOUT=604800000
MIN_TASK_REWARD=1
MAX_TASK_REWARD=10000

# Points Configuration
INITIAL_POINTS=0
MAX_POINTS_PER_TASK=1000
POINTS_HISTORY_LIMIT=1000

# Development Configuration
NEXT_PUBLIC_ENABLE_MOCK_API=false
ENABLE_DEBUG_LOGS=true
ENABLE_MOCK_DELAY=true
MOCK_API_DELAY=500

